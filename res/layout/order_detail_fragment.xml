<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/grid_order_detail"
      android:gravity="center"
      android:layout_height="wrap_content"
      android:layout_width="fill_parent"
      android:numColumns="2">

    <TextView
        android:id="@+id/label_order_id"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:text="@string/label_order_id" />

    <EditText
        android:id="@+id/text_order_id"
        android:editable="false"
        android:layout_gravity="fill_horizontal"
        android:layout_column="1"
        android:layout_row="0" />

    <TextView
        android:id="@+id/label_order_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:text="@string/label_order_name" />

    <EditText
        android:id="@+id/text_order_name"
        android:editable="false"
        android:layout_gravity="fill_horizontal"
        android:layout_column="1"
        android:layout_row="1" />

    <TextView
        android:id="@+id/label_order_date"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:text="@string/label_order_date" />

    <EditText
        android:id="@+id/text_order_date"
        android:editable="false"
        android:layout_gravity="fill_horizontal"
        android:layout_column="1"
        android:layout_row="2" />

</GridLayout>
